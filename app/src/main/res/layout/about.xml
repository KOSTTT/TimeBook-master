<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="409dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/back_achivment"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDevelop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/arnamu"
                android:text="Разработчики:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDevelopDescrip"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/arnamu"
                android:layout_marginRight="15dp"
                android:text="@string/developer"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDescrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/arnamu"
                android:text="Описание приложения:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDescripDescrip"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:fontFamily="@font/arnamu"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/desc_about"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>